# Linguify Environment Configuration Template
# Copy this file to .env and fill in your values

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================

# API Base URL for frontend
NEXT_PUBLIC_API_URL=http://localhost:8000

# Auth0 Configuration
NEXT_PUBLIC_AUTH0_DOMAIN=your-domain.auth0.com
NEXT_PUBLIC_AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret
AUTH0_BASE_URL=http://localhost:3000
AUTH0_SECRET=your-auth0-secret

# ==============================================
# BACKEND CONFIGURATION
# ==============================================

# Django Settings
DEBUG=True
SECRET_KEY=your-super-secret-django-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/linguify
# Alternative for SQLite (development)
# DATABASE_URL=sqlite:///db.sqlite3

# Redis Configuration (for caching and websockets)
REDIS_URL=redis://localhost:6379/0

# ==============================================
# COOKIE CONSENT CONFIGURATION
# ==============================================

# Skip cookie consent checks in debug mode (development only)
COOKIE_CONSENT_DEBUG_SKIP=False

# Cookie consent version (increment when privacy policy changes)
COOKIE_CONSENT_VERSION=1.0

# Cookie expiration in days
COOKIE_CONSENT_EXPIRY_DAYS=365

# ==============================================
# EMAIL CONFIGURATION
# ==============================================

# Email backend for notifications
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# ==============================================
# AI/LANGUAGE PROCESSING
# ==============================================

# OpenAI API (for language features)
OPENAI_API_KEY=your-openai-api-key

# ==============================================
# STORAGE CONFIGURATION
# ==============================================

# AWS S3 (for production file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket

# Media files (local development)
MEDIA_ROOT=/path/to/media/files
MEDIA_URL=/media/

# ==============================================
# LOGGING CONFIGURATION
# ==============================================

# Log level
LOG_LEVEL=INFO

# Sentry (error tracking in production)
SENTRY_DSN=your-sentry-dsn

# ==============================================
# SECURITY CONFIGURATION
# ==============================================

# CORS settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# CSRF settings
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Session security
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# ==============================================
# DEVELOPMENT TOOLS
# ==============================================

# Enable Django debug toolbar
ENABLE_DEBUG_TOOLBAR=True

# Enable Django extensions
ENABLE_DJANGO_EXTENSIONS=True