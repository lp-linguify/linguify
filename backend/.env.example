# backend/.env.example

# ⚠️  IMPORTANT: Copy this file to .env and fill in your actual values
# ⚠️  Never commit .env files with real credentials to version control

# Django Configuration
SECRET_KEY='your-secret-key-here-generate-a-new-one'
DEBUG=True
DJANGO_ENV="development"

BACKEND_URL="http://localhost:8000"
FRONTEND_URL="http://localhost:3000"
ALLOWED_HOSTS="localhost,127.0.0.1"

# Database settings (local PostgreSQL)
DB_NAME='your_database_name'
DB_USER='your_db_user'
DB_PASSWORD='your_db_password'
DB_HOST='localhost'
DB_PORT=5432

# Email Configuration
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587"
EMAIL_USE_TLS=True
EMAIL_HOST_USER="your-email@gmail.com"
# Use App Passwords for Gmail accounts with 2FA enabled 
EMAIL_HOST_PASSWORD="your-email-app-password"
DEFAULT_FROM_EMAIL="Your App <no-reply@yourapp.com>"

# Auth0 settings (Legacy - pour migration)
AUTH0_DOMAIN="your-auth0-domain.auth0.com"
AUTH0_CLIENT_ID="your-auth0-client-id"
AUTH0_CLIENT_SECRET="your-auth0-client-secret"
AUTH0_AUDIENCE="https://your-api-audience"

# Supabase Configuration
# RESTful endpoint for querying and managing your database
SUPABASE_URL="https://your-project-id.supabase.co"
# Anon key for client-side access, service role key for server-side operations
SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"
SUPABASE_PROJECT_ID="your-project-id"
SUPABASE_JWT_SECRET="your-supabase-jwt-secret"

# Database Configuration pour Supabase
# Utiliser le pooler de transaction pour de meilleures performances
SUPABASE_DB_HOST="aws-0-region.pooler.supabase.com"
SUPABASE_DB_PORT=5432
SUPABASE_DB_NAME="postgres"
SUPABASE_DB_USER="postgres.your-project-id"
SUPABASE_DB_PASSWORD="your-supabase-db-password"

# Configuration de migration - True pour utiliser Supabase, False pour local
USE_SUPABASE_DB=True

# Social Authentication
GOOGLE_AUTH_KEY="your-google-client-id.apps.googleusercontent.com"
GOOGLE_AUTH_SECRET_KEY="your-google-client-secret"
FACEBOOK_AUTH_KEY="your-facebook-app-id"
FACEBOOK_AUTH_SECRET_KEY="your-facebook-app-secret"
REDIRECT_URLS="http://localhost:3000/auth/google, http://localhost:3000/auth/facebook" 

# Security Settings
CORS_ALLOWED_ORIGINS="http://localhost:3000"
CSRF_TRUSTED_ORIGINS="http://localhost:3000,http://127.0.0.1:3000"

# Redis Configuration
REDIS_URL="redis://127.0.0.1:6379/1"