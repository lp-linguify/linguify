# frontend/.env.local.example
# Copy this file to .env.local and customize the values for your environment

# Database configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/linguify?schema=public"

# Application configuration
NODE_ENV="development"
API_PORT=6060
CLIENT_PORT=3000
NEXT_PUBLIC_API_URL="http://localhost:8000"

# Auth0 configuration
# Replace these values with those from your own Auth0 application
AUTH0_SECRET="your_generated_secret_key"
AUTH0_BASE_URL="http://localhost:3000"
AUTH0_ISSUER_BASE_URL="https://your-tenant.region.auth0.com"
AUTH0_CLIENT_ID="your_client_id"
AUTH0_CLIENT_SECRET="your_client_secret"
AUTH0_AUDIENCE="https://linguify-api"
AUTH0_CALLBACK_URL="http://localhost:3000/callback"
AUTH0_DOMAIN="your-tenant.region.auth0.com"
AUTH0_ALGORITHMS=RS256

# Auth0 configuration (Frontend)
NEXT_PUBLIC_AUTH0_DOMAIN="your-tenant.region.auth0.com"
NEXT_PUBLIC_AUTH0_CLIENT_ID="your_client_id"
NEXT_PUBLIC_AUTH0_REDIRECT_URI="http://localhost:3000/callback"
NEXT_PUBLIC_FRONTEND_URL="http://localhost:3000"
NEXT_PUBLIC_BACKEND_URL="http://localhost:8000"
NEXT_PUBLIC_AUTH0_AUDIENCE="https://linguify-api"
